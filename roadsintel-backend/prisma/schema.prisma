generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model RoadImage {
  id          String   @id @default(cuid())
  filename    String
  path        String
  uploadedAt  DateTime @default(now())
  status      String   @default("pending")
  crackCount  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  crackDetections CrackDetection[]
  workOrders      WorkOrder[]
}

model CrackDetection {
  id          String    @id @default(cuid())
  imageId     String
  image       RoadImage @relation(fields: [imageId], references: [id], onDelete: Cascade)
  boxes       String?
  crackCount  Int
  confidence  Float?
  createdAt   DateTime  @default(now())
  
  @@index([imageId])
}

model WorkOrder {
  id          String    @id @default(cuid())
  imageId     String
  image       RoadImage @relation(fields: [imageId], references: [id], onDelete: Cascade)
  crackCount  Int
  status      String    @default("Open")
  priority    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([imageId])
  @@index([status])
}